---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout 
	title="Nexuvi - Innovación y Desarrollo" 
	seoTitle="Nexuvi - Innovación y Desarrollo" >
	<div class="w-8/12 md:w-6/12 mx-auto">
		<div class="w-full h-auto my-3 flex justify-center">
			<img class="w-4/6 md:w-7/12 lg:w-5/12" src="/logo.svg" alt="Nexuvi">
		</div>
		<h1 class="text-4xl font-bold md:text-6xl lg:text-9xl text-center drop-shadow-[0px_35px_35px_rgba(62,160,235,0.6)]">Nexuvi</h1>
		<div id="typed-strings">
        	<p>Consultora de Software</p>
			<p>Innovación y Desarrollo</p>
    	</div>

    	<div class="text-center text-2xl mt-5">
        	<span id="typed"></span>
    	</div>
	</div>
</MainLayout>


<script>
    import Typed from 'typed.js';

    let typed = new Typed("#typed",{
        stringsElement: "#typed-strings",
		typeSpeed:75,
		loop:true
    });

</script>
